generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int         @id @default(autoincrement())
  email    String      @unique
  name     String
  password String
  celular  String?
  type     UsuarioType @default(AUTENTICADO)
  filhos   Aluno[]
  escola   Escola?     @relation(fields: [escolaId], references: [id])
  escolaId Int?
}

enum UsuarioType {
  ADMINISTRADOR
  COORDENADOR
  PROFESSOR
  RESPONSAVEL
  AUTENTICADO
}

enum MenuType {
  ROOT
  PERFIL
  DROPDOWN
}

model Permission {
  id          Int           @id @default(autoincrement())
  path        String        @unique
  title       String?
  icon        String?
  description String?
  menuType    MenuType[]
  usuarioType UsuarioType[]
}

model Aluno {
  id           Int       @id @default(autoincrement())
  nome         String
  escola       Escola?   @relation(fields: [escolaId], references: [id])
  escolaId     Int?
  responsaveis Usuario[]
}

model Escola {
  id            Int       @id @default(autoincrement())
  nome          String
  celular       String?
  alunos        Aluno[]
  colaboradores Usuario[]
}
