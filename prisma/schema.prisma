generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id       Int         @id @default(autoincrement())
  email    String      @unique
  name     String
  password String
  celular  String?
  type     UsuarioType @default(AUTENTICADO)
  cooperativa   Cooperativa?     @relation(fields: [cooperativaId], references: [id])
  cooperativaId Int?
  produtor      Produtor?        @relation(fields: [produtorId], references: [id])
  produtorId    Int?
  comprador     Comprador?        @relation(fields: [compradorId], references: [id])
  compradorId    Int?
  compras       Transacao[]      @relation("Comprador")
  vendas        Transacao[]      @relation("Produtor")
}

enum UsuarioType {
  ADMINISTRADOR
  COOPERATIVA
  PRODUTOR
  COMPRADOR
  AUTENTICADO
}

enum MenuType {
  ROOT
  PERFIL
  DROPDOWN
}

model Permission {
  id          Int           @id @default(autoincrement())
  path        String        @unique
  title       String?
  icon        String?
  description String?
  menuType    MenuType[]
  usuarioType UsuarioType[]
}

model Cooperativa {
  id            Int       @id @default(autoincrement())
  nome          String
  celular       String?
  colaboradores Usuario[]
}

model Produtor {
  id            Int       @id @default(autoincrement())
  nome          String
  celular       String?
  usuarios      Usuario[]
}

model Comprador {
  id            Int       @id @default(autoincrement())
  nome          String
  celular       String?
  usuarios      Usuario[]
}

model Transacao {
  id            Int             @id @default(autoincrement())
  data          DateTime        @default(now())
  quantidade    Int
  precoUnitario Float
  comprador     Usuario?        @relation("Comprador", fields: [compradorId], references: [id])
  compradorId   Int?
  produtor      Usuario?        @relation("Produtor", fields: [produtorId], references: [id])
  produtorId    Int?
}

model PrecoCafe {
  id                Int      @id @default(autoincrement())
  data              DateTime
  precoRobusta      Float?
  precoArabica      Float?
}
